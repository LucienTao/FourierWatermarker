{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "watch": true,
    "lib": [
      "es2015.promise"
    ]
  },
  "include": [
    "main.ts",
    "Src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}